@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model PharmacySupplyApp.Models.ScheduleDate

@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row m-5">
        <div class="col-12">
            <h3 class="text-center">Enter Schedule Date</h3>
        </div>
    </div>
    <div class="row justify-content-center mx-5">
        <div class="col-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-success"></div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input type="date" asp-for="Date" class="form-control" min="@ViewBag.Min" value="@ViewBag.Min"/>
                    <span asp-validation-for="Date" class="text-success"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-success"/>
                </div>
            </form>
        </div>
    </div>
</div>
